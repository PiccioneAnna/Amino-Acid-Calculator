<Window x:Class="Amino_Acid_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amino_Acid_Calculator"
        mc:Ignorable="d"
        Title="Amino Acid Calculator" Height="500" Width="375" ResizeMode="NoResize">
    <StackPanel Height="475" Width="350">

        <Label FontSize="10" Height="25" RenderTransformOrigin="0.5,0.5">Please select all correct file locations before continuing</Label>

        <StackPanel Background="LightGray" Orientation="Horizontal">
            <Label VerticalAlignment="Center" Margin="0 0 10 0" Width="65">Base Files:</Label>
            <TextBox Name="basetxt" Background="#f0f0f0" TextWrapping="Wrap" Text="" Width="236" Height="20"/>
            <Button Height="20" Width="20" Margin="10 0 0 0" Click="SelectBaseFileLocation">
                <Label Foreground="Black" FontSize="8" Height="22">...</Label>
            </Button>
        </StackPanel>




    </StackPanel>
</Window>
